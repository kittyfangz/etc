# vim: fdm=marker
# launching software{{{
super + {n, m}
	alacritty --class editor -o window.dimensions.columns=80 \
	-o window.dimensions.lines=24 -o window.position.x=50 \
	-o window.position.y=50 \
	-e sh -c {newsboat, ncmpcpp}

super + shift + Return
	alacritty

super + p
	rofi -show run

super + w
	rofi -show window

super + s
	clerk -t

super + shift + s
	srofi
#}}}

# screen recording{{{
super + r ; s
	record.sh

# note that these will fuck over other ffmpeg instances too
super + r ; p
	pkill -STOP ffmpeg

super + r ; c
	pkill -CONT ffmpeg

super + r ; x
	pkill -TERM ffmpeg
#}}}

# screenshotting {{{
# copy selected area to clipboard
super + i ; c
	maim -s | xclip -selection clipboard -t image/png

super + i ; i
	maim -s "~/img/$(date +%s)".png
#}}}

# xf86 stuff {{{
XF86AudioRaiseVolume
	amixer set Master 5%+

XF86AudioLowerVolume
	amixer set Master 5%-

XF86AudioMute
	amixer set Master toggle

XF86AudioPlay
	kmrt

XF86AudioStop
	kmrs

XF86AudioPrev
	kmrp

XF86AudioNext
	kmrn

super + XF86AudioPlay
	mpc toggle

super + XF86AudioStop
	mpc stop

super + XF86AudioPrev
	mpc prev

super + XF86AudioNext
	mpc next

super + F6
	brightnessctl set +5%

super + F5
	brightnessctl set 5%-
#}}}
