super + shift + c
	bspc node -c

super + {_,shift + }{h,j,k,l}
	bspc node {-f,-s} {west,south,north,east}

super + {_,shift + }{1-9,0}
	bspc {desktop -f, node -d} '^{1-9},10}'


super + {n, m, s}
	urxvt -e sh -c {newsboat, ncmpcpp, alsamixer}


super + shift + Return
	urxvtc

super + p
	rofi -show run

XF86AudioRaiseVolume
	amixer set Master 5%+

XF86AudioLowerVolume
	amixer set Master 5%-

XF86AudioMute
	amixer set Master toggle

XF86AudioPlay
	mpc toggle

XF86AudioStop
	mpc stop

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

XF86MonBrightnessUp
	brightnessctl set +5%

XF86MonBrightnessDown
	brightnessctl set 5%-
