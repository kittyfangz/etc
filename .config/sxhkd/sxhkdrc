super + {n, m}
	alacritty --class editor -o window.dimensions.columns=80 \
	-o window.dimensions.lines=24 -o window.position.x=50 \
	-o window.position.y=50 \
	-e sh -c {newsboat, ncmpcpp}

super + shift + Return
	alacritty

super + p
	rofi -show run

super + s
	clerk -t

XF86AudioRaiseVolume
	amixer set Master 5%+

XF86AudioLowerVolume
	amixer set Master 5%-

XF86AudioMute
	amixer set Master toggle

XF86AudioPlay
	mpc toggle

XF86AudioStop
	mpc stop

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

XF86MonBrightnessUp
	brightnessctl set +5%

XF86MonBrightnessDown
	brightnessctl set 5%-
