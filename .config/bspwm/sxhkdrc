super + shift + c
	bspc node -c

super + {_,shift + }{h,j,k,l}
	bspc node {-f,-s} {west,south,north,east}

super + {_,shift + }{1-9,0}
	bspc {desktop -f, node -d} '^{1-9},10}'

super + z
	bspc desktop -l next

# this shit's so complicated i'm putting it in a script
super + u ; h
	$HOME/bin/toggle_mpv_vis.sh
